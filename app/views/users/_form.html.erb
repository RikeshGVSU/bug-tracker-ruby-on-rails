<%= bootstrap_form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-8">
      <%= form.text_field :fname, class: "form-control", hide_label: true, placeholder: "First Name" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= form.text_field :lname, class: "form-control", hide_label: true, placeholder: "Last Name" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= form.text_field :email, class: "form-control" , hide_label: true, placeholder: "Email"%>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= form.text_field :thumbnail, class: "form-control", hide_label: true, placeholder: "Image" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
